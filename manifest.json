
{
  "manifest_version": 3,
  "name": "CHALAMANDRA: IA Dialéctica Élite",
  "version": "1.5.0",
  "description": "Protocolo Hegel-Trinity Multimodal. Local Nano + Cloud Pro Image/Video/Live.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Abrir Chalamandra"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
