
{
  "manifest_version": 3,
  "name": "CHALAMANDRA: IA Dialéctica Élite",
  "version": "1.7.0",
  "description": "Protocolo Hegel-Trinity Multimodal. Híbrido Nano + Pro con extracción de contexto optimizada.",
  "icons": {
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_title": "Abrir Command Center"
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "geolocation"
  ],
  "host_permissions": [
    "https://chalamandra.vercel.app/*",
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/sidepanel/*", "src/options/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
